<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new list</h3>
        <%= simple_form_for @listing do |f| %>
          <%= f.input :title, placeholder: 'Beautiful Apartment' %>
          <%= f.input :description, placeholder: 'A lovely place for getaway' %>
          <%= f.input :price %>

          <!-- File input field for uploading photos -->
          <%= f.input :photos %>

          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
