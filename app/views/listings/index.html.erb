<div class="container" style="margin-top: 4rem;">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="card mb-3 border-0">
          <a href="/listings/<%= listing.id %>">
            <img src="https://source.unsplash.com/random/airbnb?sig=<%= listing.id %>" class="card-img-top" alt="listing_image" style="border-radius: 10px; object-fit: cover; aspect-ratio: 1/1; width: 100%;">
          </a>
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
              <div class="listing-favorite" data-controller="favourites" data-action="click->favourites#fire" data-favourites-link-value="/listings/<%= listing.id %>/favourites">
                <i class="fa-regular fa-heart"></i>
              </div>
              <div class="card-text" style="text-align: right;">
                <h4 style="font-weight: bold;"><%= listing.title %></h4>
                <p><%= number_to_currency(listing.price, unit: "SGD") %> per night</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
